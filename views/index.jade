html(ng-app='demo')
	head
		title Rose Bank
		link(
			rel='stylesheet' 
			href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' 
			integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' 
			crossorigin='anonymous')
		script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js')
		script(src='/js/init.js')
		script(src='/js/service.js')
		script(src='/js/controller.js')
	body
		div(class='container', ng-controller='bankInfoCtrl')
			h1 Rose Bank
			section(class='row')
				div(class='col-md-12')
					address
						strong {{bankInfo.address}}
						br
						abbr P: {{bankInfo.tel}}
					blockquote
						p We have {{bankInfo.employees}} employees at the moment.